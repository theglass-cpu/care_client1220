<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Care_giver_review_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/review_back_bt"
            android:layout_width="45dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="평가목록"
            android:textSize="30dp"
            android:fontFamily="@font/tway_air"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >
        <ImageView
            android:id="@+id/review_cs_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/userss" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView

                android:id="@+id/review_cs_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/tway_air"
                android:layout_margin="5dp"
                android:text="닉네임" />


            <TextView
            android:id="@+id/review_cs_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/tway_air"
                android:layout_margin="5dp"
            android:text="경력" />
            <TextView
                android:id="@+id/review_cs_cf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/tway_air"
                android:layout_margin="5dp"
                android:text="자격증" />


        </LinearLayout>
    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/review_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>







