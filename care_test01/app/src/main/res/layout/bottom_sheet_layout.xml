<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/centttt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:hint="가게이름가게이름"
                android:textColor="#404040"
                android:textSize="17sp"
                android:fontFamily="@font/tway_air"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bot_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:hint="위치"
                android:maxLines="3"
                android:textColor="#323232"
                android:textSize="14sp"
                android:fontFamily="@font/tway_air"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bot_tell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint=""
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="#323232"
                android:fontFamily="@font/tway_air"
                android:maxLines="3"/>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_hide_bt_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#919191"
        android:fontFamily="@font/tway_air"
        android:text="찾아가기"
        android:textColor="#FFFFFF" />

</LinearLayout>