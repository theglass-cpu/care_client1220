        />

    <Button
        android:id="@+id/result_bt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tway_air"
        android:textSize="20dp"
        android:background="#FFED52"
        android:padding="5dp"
        android:text="다음"/>

